<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"     
    android:background="@drawable/background" 
    android:padding="10dp">

    <ListView
        android:id="@+id/listViewListaClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"/>

        <TextView
             android:id="@+id/tvAddCliente"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:text="@string/adicionar_cliente"
             android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imAddCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_person"
            android:contentDescription="@string/descricao_imagem"
            android:layout_gravity="center"            
            android:onClick="casdastrarCliente"/>

</LinearLayout>