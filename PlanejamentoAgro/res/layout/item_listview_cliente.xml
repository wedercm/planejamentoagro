<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_background"
    android:padding="2dp" >

    	<TextView
    	    android:id="@+id/itemListNomeCliente"
    	    android:layout_width="match_parent"
    	    android:layout_height="30dp"
    	    android:background="@drawable/shape_nome_cliente"
    	    android:gravity="center"
    	    android:text="@string/vazio"
    	    android:textAllCaps="true"
    	    android:textColor="#000000"
    	    android:textSize="20sp"
    	    android:textStyle="bold" />

   	<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="@drawable/shape_nome_fazenda_municipio"
    android:padding="10sp">

    <TextView
        android:id="@+id/itemListNomeMunicipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_centerVertical="true"        
        android:text="@string/vazio"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemListNomeFazenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"        
		android:layout_alignParentStart="true"        
        android:layout_marginStart="50dp"
        android:text="@string/vazio"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />
    	    
   </RelativeLayout>	    
    	
</LinearLayout>